	</head>
	<body>
		<button
        class="toggle"
        data-theme-toggle
        id="theme-toggle"
        style="display: none"
        type="button"
        aria-label=" light and dark mode switch"
      >
        <img
          class="theme-icon"
          src="/svg/moon.svg"
          width="25"
          height="25"
          alt="dark and light theme switcher"
        />
      </button>

		<a href="#skip" class="visually-hidden">Skip to main content</a>


  {% include "partials/header.njk" %}


	<main class="[ page-layout ] [ flow ]" id="skip">
			
				{{ content | safe }}
			
		</main>

		<footer>
			<small><em>Built with <a href="https://www.11ty.dev/">{{ eleventy.generator }}</a></em>
			| <a href="/feed/feed.xml">RSS Feed</a></small>
		</footer>

		<!-- This page `{{ page.url }}` was built on {% currentBuildDate %} -->
		<script type="module" src="{% getBundleFileUrl "js" %}"></script>
		{%- js  %}	
		{% include "public/js/light-dark.js" %}	
		{% include "public/js/lite-yt-embed.js" %}	
		{% include "node_modules/@zachleat/heading-anchors/heading-anchors.js" %}	
		{% endjs %}		
	</body>
</html>
