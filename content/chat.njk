---js
{
  eleventyNavigation: {
    key: "Chat",
    order: 2
  },
  pagination: {
    data: "collections.podcast",
    size: 9,
    alias: "posts",
    reverse: true
  },
  permalink: "{% if pagination.pageNumber > 0 %}/chat/page/{{ pagination.pageNumber + 1 }}/{% else %}/chat/{% endif %}"
}
---

<div class=" full flow">

<h1>Chat</h1>
<p><strong>Audio podcast episodes (also on YouTube).</strong></p>


 <ul class="box">
{%- for post in posts -%}
  <li><a href="{{post.url}}"> <h2>{{ post.data.title }}</h2> </a> <br>
   <time class="postlist-date"  datetime="{{ post.date | htmlDateString }}">{{ post.date | readableDate("LLLL yyyy") }}</time><br>
  <small>{{post.data.description}}</small> </li>
{%- endfor -%}
</ul>
</div>
<ul>
{# Navigation #}
<nav aria-label="Page navigation">
  <ul class="pagination">
    {%- if pagination.href.previous -%}
      <li><a href="{{ pagination.href.previous }}">← Previous</a></li>
    {%- endif -%}
    
    {%- for pageUrl in pagination.hrefs -%}
      <li><a href="{{ pageUrl }}" {% if page.url == pageUrl %}aria-current="page"{% endif %}>
        {{ loop.index }}
      </a></li>
    {%- endfor -%}
    
    {%- if pagination.href.next -%}
      <li><a href="{{ pagination.href.next }}">Next →</a></li>
    {%- endif -%}
  </ul>
</nav>